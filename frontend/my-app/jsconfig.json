{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$lib": ["src/lib"],
      "$routes/*": ["src/routes/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "module": "es2020",
    "moduleResolution": "bundler"
  },
  "include": ["src"],
  "exclude": ["node_modules", ".svelte-kit", "build"]
}
